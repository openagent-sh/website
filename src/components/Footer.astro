---
import { Github } from "@lucide/astro";
---

<footer class="border-t border-[var(--border)] py-12">
  <div class="mx-auto max-w-6xl px-6">
    <div class="flex flex-col items-center gap-8">
      <!-- Logo and links -->
      <div class="flex flex-col sm:flex-row items-center gap-6 sm:gap-8">
        <a href="/" class="flex items-center gap-2 text-[var(--text-primary)] font-medium">
          <img src="/favicon.png" alt="OpenAgent" class="w-6 h-6" />
          <span>OpenAgent</span>
        </a>

        <div class="flex items-center gap-6 text-sm text-[var(--text-muted)]">
          <a
            href="https://github.com/openagent-sh/openagent"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-[var(--accent)] transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://github.com/openagent-sh/openagent#readme"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-[var(--accent)] transition-colors"
          >
            Docs
          </a>
          <a
            href="https://x.com/openagent_"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-[var(--accent)] transition-colors"
          >
            X
          </a>
        </div>
      </div>

      <!-- Copyright -->
      <div class="text-sm text-[var(--text-faded)]">
        © 2025 OpenAgent · Open Source
      </div>
    </div>
  </div>
</footer>
