---
// Highlights Banner - styled as a contained card with dividers
// Desktop: 5 columns in a row
// Mobile: 2x2 grid + centered bottom row
const topRowHighlights = [
  { text: "Open Source", icon: "◆" },
  { text: "Fast Onboarding", icon: "◆" },
  { text: "Modular Config", icon: "◆" },
  { text: "Built on OpenCode", icon: "◆", link: "https://opencode.ai" }
];
const centerHighlight = { text: "Personalized to You", icon: "◆", accent: true };
---

<section class="py-16">
  <div class="mx-auto max-w-4xl px-6">
    <!-- Card container with border and background -->
    <div class="relative">
      <!-- Corner accents -->
      <div class="absolute -top-px -left-px w-8 h-8 border-t-2 border-l-2 border-[var(--accent)]/50"></div>
      <div class="absolute -top-px -right-px w-8 h-8 border-t-2 border-r-2 border-[var(--accent)]/50"></div>
      <div class="absolute -bottom-px -left-px w-8 h-8 border-b-2 border-l-2 border-[var(--accent)]/50"></div>
      <div class="absolute -bottom-px -right-px w-8 h-8 border-b-2 border-r-2 border-[var(--accent)]/50"></div>

      <div class="border border-[var(--border)] bg-[var(--surface)]/30 backdrop-blur-sm">
        <!-- Desktop: 5 columns -->
        <div class="hidden md:grid md:grid-cols-5 divide-x divide-[var(--border)]">
          <div class="flex flex-col items-center justify-center py-6 px-4">
            <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
            <span class="text-sm text-[var(--text-muted)] text-center">Open Source</span>
          </div>
          <div class="flex flex-col items-center justify-center py-6 px-4">
            <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
            <span class="text-sm text-[var(--text-muted)] text-center">Fast Onboarding</span>
          </div>
          <div class="flex flex-col items-center justify-center py-6 px-4 bg-[var(--accent)]/5">
            <span class="text-[var(--accent)] text-xs mb-2">◆</span>
            <span class="text-sm text-[var(--accent)] font-medium text-center">Personalized to You</span>
          </div>
          <div class="flex flex-col items-center justify-center py-6 px-4">
            <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
            <span class="text-sm text-[var(--text-muted)] text-center">Modular Config</span>
          </div>
          <a
            href="https://opencode.ai"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col items-center justify-center py-6 px-4 hover:bg-[var(--surface)] transition-colors"
          >
            <span class="text-[var(--text-faded)] text-xs mb-2 group-hover:text-[var(--accent)] transition-colors">◆</span>
            <span class="text-sm text-[var(--text-muted)] group-hover:text-[var(--text-primary)] text-center transition-colors">Built on OpenCode</span>
          </a>
        </div>

        <!-- Mobile: 2x2 grid + centered bottom -->
        <div class="md:hidden">
          <div class="grid grid-cols-2 divide-x divide-y divide-[var(--border)]">
            <div class="flex flex-col items-center justify-center py-6 px-4">
              <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
              <span class="text-sm text-[var(--text-muted)] text-center">Open Source</span>
            </div>
            <div class="flex flex-col items-center justify-center py-6 px-4">
              <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
              <span class="text-sm text-[var(--text-muted)] text-center">Fast Onboarding</span>
            </div>
            <div class="flex flex-col items-center justify-center py-6 px-4">
              <span class="text-[var(--text-faded)] text-xs mb-2">◆</span>
              <span class="text-sm text-[var(--text-muted)] text-center">Modular Config</span>
            </div>
            <a
              href="https://opencode.ai"
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col items-center justify-center py-6 px-4 hover:bg-[var(--surface)] transition-colors"
            >
              <span class="text-[var(--text-faded)] text-xs mb-2 group-hover:text-[var(--accent)] transition-colors">◆</span>
              <span class="text-sm text-[var(--text-muted)] group-hover:text-[var(--text-primary)] text-center transition-colors">Built on OpenCode</span>
            </a>
          </div>
          <!-- Full width bottom item -->
          <div class="border-t border-[var(--border)]">
            <div class="flex flex-col items-center justify-center py-6 px-4 bg-[var(--accent)]/5 w-full">
              <span class="text-[var(--accent)] text-xs mb-2">◆</span>
              <span class="text-sm text-[var(--accent)] font-medium text-center">Personalized to You</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
