---
import { Github } from "@lucide/astro";
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-[var(--border)] bg-[var(--background)]/90 backdrop-blur-md">
  <div class="mx-auto max-w-6xl px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="relative">
          <img src="/openagent_logo.png" alt="OpenAgent" class="w-9 h-9" />
          <div class="absolute inset-0 bg-[var(--accent)] opacity-0 group-hover:opacity-20 rounded transition-opacity mix-blend-overlay"></div>
        </div>
        <span class="text-lg font-semibold tracking-tight text-[var(--text-primary)]">OpenAgent</span>
      </a>

      <!-- Nav Links -->
      <div class="flex items-center gap-6">
        <a
          href="#features"
          class="hidden sm:block text-sm text-[var(--text-muted)] hover:text-[var(--accent)] transition-colors"
        >
          Features
        </a>
        <a
          href="https://github.com/openagent-dev/openagent#readme"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:block text-sm text-[var(--text-muted)] hover:text-[var(--accent)] transition-colors"
        >
          Docs
        </a>
        <a
          href="https://github.com/openagent-dev/openagent"
          target="_blank"
          rel="noopener noreferrer"
          class="group relative inline-flex items-center gap-2 px-4 py-2 text-sm font-medium overflow-hidden"
        >
          <span class="absolute inset-0 rounded-lg border border-[var(--border)] group-hover:border-[var(--accent)]/50 transition-colors"></span>
          <span class="absolute inset-0 rounded-lg bg-[var(--surface)]/0 group-hover:bg-[var(--surface)] transition-colors"></span>
          <Github class="relative h-4 w-4 text-[var(--text-muted)] group-hover:text-[var(--accent)] transition-colors" />
          <span class="relative hidden sm:inline text-[var(--text-primary)]">GitHub</span>
        </a>
      </div>
    </div>
  </div>
</nav>
