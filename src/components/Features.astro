---
import { Brain, GitBranch, Terminal, FileText, Puzzle, User } from "@lucide/astro";

const features = [
  {
    icon: Brain,
    title: "Persistent Memory",
    description: "Your agent remembers what matters: project context, decisions, preferences. Short-term for this week, long-term for life.",
    module: "MEM_01"
  },
  {
    icon: GitBranch,
    title: "Agents You Actually Use",
    description: "Code reviewers, frontend designers, memory agents, changelog writers. Specialized agents for your actual workflow. Set some of ours or build your own.",
    module: "AGT_02"
  },
  {
    icon: Terminal,
    title: "Built on OpenCode",
    description: "OpenAgent is a system layer for OpenCode. All the power of the CLI, enhanced with persistent context and personalization.",
    module: "CLI_03"
  },
  {
    icon: FileText,
    title: "A Soul",
    description: "Configure everything: work areas, goals, habits, agent behavior. The system adapts to how you work.",
    module: "SYS_04"
  },
  {
    icon: Puzzle,
    title: "Fully Extensible",
    description: "Add custom commands, plugins, skills. Extend the system to fit your needs.",
    module: "EXT_05"
  },
  {
    icon: User,
    title: "Deeply Personalized",
    description: "Smart onboarding learns who you are in minutes. Then keeps learning: your style, your priorities, your workflow.",
    module: "USR_06"
  }
];
---

<section id="features" class="relative py-20 md:py-28">
  <div class="mx-auto max-w-6xl px-6">
    <!-- Header -->
    <div class="text-center">
      <p class="section-label justify-center">
        Features
      </p>
      <h2 class="mt-4 text-3xl font-semibold text-[var(--text-primary)] md:text-4xl">
        Everything you need
      </h2>
    </div>

    <!-- Grid -->
    <div class="mt-16 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {features.map(({ icon: Icon, title, description, module }, index) => (
        <div class="group relative border border-[var(--accent)]/20 bg-[var(--surface)]/30 p-6 transition-all duration-300 hover:border-[var(--accent)]/50 hover:bg-[var(--surface)]">
          <!-- Module label -->
          <div class="absolute -top-3 right-4 px-2 py-0.5 bg-[var(--background)] border border-[var(--border)] text-[10px] font-mono text-[var(--text-faded)] tracking-wider">
            {module}
          </div>

          <!-- Corner brackets - always visible with accent color -->
          <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-[var(--accent)]/40 group-hover:border-[var(--accent)] transition-colors"></div>
          <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-[var(--accent)]/40 group-hover:border-[var(--accent)] transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-[var(--accent)]/40 group-hover:border-[var(--accent)] transition-colors"></div>
          <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-[var(--accent)]/40 group-hover:border-[var(--accent)] transition-colors"></div>

          <div class="mb-4 inline-flex items-center justify-center border border-[var(--accent)]/30 bg-[var(--background)] p-3 group-hover:border-[var(--accent)]/50 transition-colors">
            <Icon class="h-5 w-5 text-[var(--accent)]/70 group-hover:text-[var(--accent)] transition-colors" />
          </div>
          <h3 class="text-lg font-medium text-[var(--text-primary)]">
            {title}
          </h3>
          <p class="mt-2 text-sm text-[var(--text-muted)] leading-relaxed">
            {description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
