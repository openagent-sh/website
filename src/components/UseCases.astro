---
import { Code, Rocket, CheckSquare } from "@lucide/astro";

const useCases = [
  {
    icon: Code,
    title: "Developers",
    description: "Ship faster with an AI that knows your codebase, your patterns, and your preferences."
  },
  {
    icon: Rocket,
    title: "Founders",
    description: "A cofounder who remembers every decision, every pivot, every lesson learned."
  },
  {
    icon: CheckSquare,
    title: "Personal",
    description: "Tasks, habits, goalsâ€”one system that grows with you and keeps you on track."
  }
];
---

<section class="relative py-20 md:py-28">
  <!-- Top border with circuit node -->
  <div class="absolute top-0 left-0 right-0 h-px bg-[var(--border)]">
    <div class="absolute left-1/4 -translate-y-1/2 w-2 h-2 rounded-full bg-[var(--text-faded)]"></div>
    <div class="absolute right-1/4 -translate-y-1/2 w-2 h-2 rounded-full bg-[var(--accent)] shadow-[0_0_8px_var(--accent-glow-strong)]"></div>
  </div>

  <div class="mx-auto max-w-6xl px-6">
    <!-- Header -->
    <div class="text-center">
      <p class="section-label justify-center">
        Use Cases
      </p>
      <h2 class="mt-4 text-3xl font-semibold text-[var(--text-primary)] md:text-4xl">
        Built for builders
      </h2>
    </div>

    <!-- Cards -->
    <div class="mt-16 grid gap-6 md:grid-cols-3">
      {useCases.map(({ icon: Icon, title, description }, index) => (
        <div class="group relative border border-[var(--border)] bg-[var(--surface)]/30 p-8 text-center transition-all duration-300 hover:border-[var(--accent)]/30 hover:bg-[var(--surface)]">
          <!-- Corner brackets -->
          <div class="absolute top-0 left-0 w-4 h-4 border-t border-l border-[var(--border)] group-hover:border-[var(--accent)]/50 transition-colors"></div>
          <div class="absolute top-0 right-0 w-4 h-4 border-t border-r border-[var(--border)] group-hover:border-[var(--accent)]/50 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-4 h-4 border-b border-l border-[var(--border)] group-hover:border-[var(--accent)]/50 transition-colors"></div>
          <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-[var(--border)] group-hover:border-[var(--accent)]/50 transition-colors"></div>

          <div class="mx-auto mb-6 inline-flex items-center justify-center border border-[var(--border)] bg-[var(--background)] p-4 group-hover:border-[var(--accent)]/30 transition-colors">
            <Icon class="h-6 w-6 text-[var(--text-muted)] group-hover:text-[var(--accent)] transition-colors" />
          </div>
          <h3 class="text-xl font-medium text-[var(--text-primary)]">
            {title}
          </h3>
          <p class="mt-3 text-sm text-[var(--text-muted)] leading-relaxed">
            {description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
